<div class ="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User Info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <!--投稿機能-->
      <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
    </div>
  <!--Users-->
    <div class="col-lg-8">
       <h2>Users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show",user_path(user.id) %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>