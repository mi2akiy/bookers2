<div class ="container">
  <div class="row">
    <div class="col-md-3">
       <h2>User Info</h2>
      <%= image_tag @showbook.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @showbook.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @showbook.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@showbook.user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

       <!--投稿機能-->
      <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@showbook.user_id) do %>
                <%= image_tag @showbook.user.get_profile_image(100,100) %><br>
                <%= @showbook.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path do %>
              <%= @showbook.title %>
              <% end %>
            </td>
            <td>
              <%= @showbook.body %>
            </td>
            <td>
              <% if @showbook.user == current_user %>
              <%= link_to "Edit",edit_book_path, class:"btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @showbook.user == current_user %>
              <%= link_to "Destroy",book_path(@showbook), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %>
            </td>
         </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>