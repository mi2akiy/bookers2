<div class ="container">
  <div class="row">
    <div class="col-lg-4">
       <h2>User Info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path, class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

         <!--投稿機能-->
      <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
    </div>

    <div class="col-lg-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path do %>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <%= link_to "Edit",edit_book_path, class:"btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy",book_path(@book), class:"btn btn-sm btn-danger", method: :delete %>
            </td>
         </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>