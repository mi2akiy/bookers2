<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"本のタイトル" %>
        </div>
        
        <div class="form-group">
          <label for="inputBody">Opinion</label><br>
           <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"本の感想" %>
        </div>
        <%= f.submit "Update Book", class:"btn btn-success" %>
      <% end %>
      <%= link_to book_path do %>
      Show
      <% end %>
      |
      <%= link_to books_path do %>
      Back
      <% end %>
    </div>
  </div>
</div>
